	<div class="fixed top-5 right-5 z-50 flex flex-col items-end gap-3">
		{% for label, messages in app.flashes %}

			{% if label == "success" %}
				{% set svg = '<svg class="fill-current" width="24" height="24" viewbox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
